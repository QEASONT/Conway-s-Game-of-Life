{
    "version": "2.0.0",
    "tasks": [{
        "label": "Build with Clang",
        "type": "shell",
        "command": "/usr/bin/clang",
        "args": [
            "-g", "${workspaceFolder}/*.c",
            "-I", "${workspaceFolder}",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}",
            // "-lsdl2"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "options": {
			"cwd": "/usr/bin"
		},
		"problemMatcher": [
			"$gcc"
		],

    }]
}